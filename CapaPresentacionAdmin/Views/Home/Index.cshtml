@{
    ViewBag.Title = "Home Page";
}


<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Resumen</a></li>
    <li class="breadcrumb-item">Dashboard</li>
</ol>

<div class="row">

    <div class="col-xl-3 col-md-6">
        <div class="card bg-success text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad clientes</h6>
                        <h6 id="totalClientes">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="col-xl-3 col-md-6">
        <div class="card bg-warning text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad ventas</h6>
                        <h6 id="totalVentas">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6">
        <div class="card bg-secondary text-white mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-9">
                        <h6>Cantidad productos</h6>
                        <h6 id="totalProductos">0</h6>
                    </div>
                    <div class="col-sm-3">
                        <i class="fas fa-boxes fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>
        Historial de ventas
    </div>
    <div class="card-body">
        <form>

            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha inicio</label>
                        <input class="form-control" type="text" name="fechaInicio:" id="txtFechaInicio" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha fin</label>
                        <input class="form-control" type="text" name="fechaFin:" id="txtFechaFin" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Id transacción</label>
                        <input class="form-control" type="text" name="IdTransaccion:" id="txtTransaccion" />
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-primary" id="btnBuscar" type="button"> <i class="fas fa-search"></i>Buscar</button>
                    </div>
                </div>

                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit"> <i class="fas fa-file-excel"></i>Exportar</button>
                    </div>
                </div>

            </div>
        </form>
        <hr />

        <div class="row">
            <div class="col-sm-12">
                <table id="tabla" class="display cell-border" style="width:100%">
                    <thead>
                        <tr>
                            <th>Fecha venta</th>
                            <th>Cliente</th>
                            <th>Prodcuto</th>
                            <th>Precio</th>
                            <th>Cantidad</th>
                            <th>Total</th>
                            <th>Id Transacción</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>


@section scripts{
    <script>

        var tablaData;



        //Cargar la fecha actual
        $("#txtFechaInicio").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());
        $("#txtFechaFin").datepicker({ dateFormat: 'dd/mm/yy' }).datepicker('setDate', new Date());


        //cargar las tarjetitas
        jQuery.ajax({
            url: '@Url.Action("VistaDashboard", "Home")',
            type: "GET",
            dataType: "json",
            contentType: "application/json: charset=utf-8",
            success: function (data) {
                var objeto = data.resultado;

                $("#totalClientes").text(objeto.TotalCliente)
                $("#totalVentas").text(objeto.TotalVenta)
                $("#totalProductos").text(objeto.TotalProducto)
            }

        })



        //mostrar por defecto las ventas del dia actual
         var url = '@Url.Action("listaReporte", "Home")' +
            "?fechaInicio=" + $("#txtFechaInicio").val() +
            "&fechaFin=" + $("#txtFechaFin").val() +
            "&IdTransaccion=" + $("#txtTransaccion").val();


       //mostrar la tabla
       tablaData = $("#tabla").DataTable({


             responsive: true,
             ordering: false,
             "ajax": {
                 url: url,
                 type: "GET",
                 dataType: "json",
             },
             "columns": [
                 { "data": "FechaVenta" },
                 { "data": "Cliente" },
                 { "data": "Producto" },
                 { "data": "Precio" },
                 { "data": "Cantidad" },
                 { "data": "Total" },
                 { "data": "IdTransaccion" }

             ],
             "language": {
                 "url": "//cdn.datatables.net/plug-ins/2.0.2/i18n/es-ES.json"
             }
        });

       $("#btnBuscar").on(click, function () {
             var nuevaUrl = '@Url.Action("listaReporte", "Home")' +
            "?fechaInicio=" + $("#txtFechaInicio").val() +
            "&fechaFin=" + $("#txtFechaFin").val() +
                "&IdTransaccion=" + $("#txtTransaccion").val();

            tablaData.ajax.url(nuevaUrl).load();
        })













    </script>





}