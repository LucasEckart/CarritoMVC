@model List<CapaEntidad.DetalleVenta>
@{
    ViewBag.Title = "misCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" ">
    <div class="row mt-5">
        <div class="col-sm-12">

            @{
                if (Model.Count > 0)
                {
                    foreach (var item in Model)
                    {

                        <div class="row mb-3">
                            <div class="col-sm-12">
                                <div class="card">
                                    <div class="card-body bg-light">

                                        <h6>ID TRANSACCIÓN: @item.IdTransaccion</h6>

                                        <div class="table-responsive">
                                            <table class="table table-bordered">

                                                <thead>
                                                    <tr>
                                                        <th>Imagen</th>
                                                        <th>Produco</th>
                                                        <th>Precio Unidad</th>
                                                        <th>Cantidad</th>
                                                        <th>Sub Total</th>

                                                    </tr>
                                                </thead>

                                                <tbody class="bg-white">
                                                    <tr>
                                                        <td>
                                                            <img class="card-img-top mb-5 mb-md-0" src="data:image/@item.IdProducto.Extension;base64,@item.IdProducto.Base64" style="width:120px; height:120px" />
                                                        </td>

                                                        <td valign="middle">
                                                            @item.IdProducto.Nombre
                                                        </td>

                                                        <td valign="middle">
                                                            $ @item.IdProducto.Precio USD
                                                        </td>

                                                        <td valign="middle">
                                                            @item.Cantidad
                                                        </td>

                                                        <td valign="middle">
                                                            $ @item.Total USD
                                                        </td>
                                                    </tr>

                                                </tbody>

                                            </table>


                                        </div>

                                    </div>

                                </div>

                            </div>

                        </div>

                    }
                }
                else
                {

                    <div class="row mb-3">
                        <div class="col-sm-12 text-center">

                            <h1>No se encontraron compras</h1>

                        </div>
                    </div>

                }

            }

        </div>
    </div>


</div>
